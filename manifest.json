{
  "name": "nosubvod-twitch",
  "version": "1.0.0",
  "description": "Show sub-only VOD on Twitch",
  "manifest_version": 3,
  "action": {
    "default_title": "NoSubVod Twitch",
    "default_popup": "dist/popup.html"
  },
  "options_ui": {
    "page": "dist/settings.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "icons": {
    "128": "assets/icons/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dist/page-script-entry.js",
        "dist/patch_amazonworker.js",
        "assets/badges/*"
      ],
      "matches": [
        "https://*.twitch.tv/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": [
        "dist/inject-unified.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "https://*.twitch.tv/*",
    "https://static.twitchcdn.net/assets/*",
    "https://gql.twitch.tv/*",
    "https://*.cloudfront.net/*"
  ],
  "permissions": [
    "tabs",
    "downloads",
    "storage",
    "notifications",
    "declarativeContent"
  ]
}