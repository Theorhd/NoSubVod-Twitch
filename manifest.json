{
  "name": "nosubvod-twitch",
  "version": "1.0.0",
  "description": "Show sub-only VOD on Twitch & Block all ads for instant stream access",
  "manifest_version": 3,
  "action": {
    "default_title": "NoSubVod Twitch",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "icons": {
    "128": "assets/icons/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dist/app.js",
        "dist/page_init.js",
        "dist/inject.js",
        "dist/patch_amazonworker.js",
        "dist/InterfaceChange.js",
        "dist/ChatCustomizer.js",
        "dist/ad-killer.js"
      ],
      "matches": [
        "https://*.twitch.tv/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": [
        "dist/chat-customizer-bridge.js",
        "dist/restriction-remover.js",
        "dist/nosubvod.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "https://*.twitch.tv/*",
    "https://static.twitchcdn.net/assets/*",
    "https://gql.twitch.tv/*",
    "https://*.cloudfront.net/*"
  ],
  "permissions": [
    "tabs",
    "downloads",
    "storage",
    "notifications",
    "declarativeContent"
  ]
}